{
    "manifest_version": 3,
    "name": "Focus Mode",
    "description": "Enable focus mode on Chrome's official Extensions and Chrome Web Store documentation.",
    "version": "1.0",
    "icons": {
      "16": "assets/size21.png",
      "32": "assets/size22.png",
      "48": "assets/size23.png",
      "128": "assets/size24.png"
    },
    "background": {
        "service_worker": "background.js"
      },
      "action": {
        "default_icon": {
            "16": "assets/size21.png",
            "32": "assets/size22.png",
            "48": "assets/size23.png",
            "128": "assets/size24.png"
        }
      },
      "permissions": ["activeTab", "scripting"],
      "commands": {
        "_execute_action": {
          "suggested_key": {
            "default": "Ctrl+Q",
            "mac": "Command+Q"
          }
        }
      }
  }